<div id="header">
	<a href="$req.get_path('/')">
	<img src="$req.get_path('images/logo-small.jpg')" border="0" />
	</a>
</div>

<div id="wrapper1">
	
	<div id="wrapper2">
	
		<div id="maincol">
				
			<div id="leftcol">
				<div class="colbox">
				<div class="boxtitle">navigation</div>
