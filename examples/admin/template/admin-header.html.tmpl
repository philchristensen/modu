<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
	<title>editable test page</title>
	<style type="text/css">@import '$base_path/admin-styles.css';</style>
	<style type="text/css">@import '$base_path/assets/jquery/jquery.autocomplete.css';</style>
	<script type="text/javascript" src="$base_path/assets/jquery/jquery-1.2.1.js"></script>
	<script type="text/javascript" src="$base_path/assets/jquery/jquery.autocomplete.js"></script>
	<script type="text/javascript" src="$base_path/assets/editable-autocomplete.js"></script>
</head>
<body>

<div id="navigation">
#if $user
<p class="current-user-info">
	You are currently logged in as $user.username.<br/>
	<a href="$selected_itemdef.config['base_path']/logout">Click here to logout.</a>
</p>
#end if

#if $itemdef_layout and len($itemdef_layout)
<ul id="nav-list">
	#for $category, $itemdefs in $itemdef_layout.items()
	<li>
		$category
		<ul class="subnav-list">
		#for $itemdef in $itemdefs
			<li class="#if $selected_itemdef == $itemdef then 'active' else ''#">
			<a href="$selected_itemdef.config['base_path']/listing/$itemdef.get_name()">$itemdef.config.get('label', $itemdef.get_name())</a>
			</li>
		#end for
		</ul>
	</li>
	#end for
</ul>
#end if
</div>

<div id="content">

