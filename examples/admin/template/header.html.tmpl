<!DOCTYPE html PUBLIC 
	"-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
	<title>editable test page</title>
	<style type="text/css">@import '$base_path/styles.css';</style>
	<style type="text/css">@import '$base_path/assets/jquery/jquery.autocomplete.css';</style>
	<script type="text/javascript" src="$base_path/assets/jquery/jquery-1.1.3.1.js"></script>
	<script type="text/javascript" src="$base_path/assets/jquery/jquery.autocomplete.js"></script>
	<script type="text/javascript" src="$base_path/assets/editable-autocomplete.js"></script>
</head>
<body>

#if $itemdef_layout and len($itemdef_layout)
<ul id="tab-list">
	#for $tab, $itemdefs in $itemdef_layout.items()
	<li class="#if $selected_itemdef in $itemdefs then 'active tab' else 'tab'#">
		<a href="$base_path/listing/$itemdefs[0].name">$tab</a>
		<ul class="subtab-list">
		#for $itemdef in $itemdefs
			<li><a href="$base_path/listing/$itemdef.name">$itemdef.name</a></li>
		#end for
		</ul>
	</li>
	#end for
</ul>
#end if

#if $user
<p class="current-user-info">You are currently logged in as $user.username. <a href="?logout=1">Click here to logout.</a></p>
#end if
